            <EditText
                android:id="@+id/et_senha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Digite sua senha"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:textColor="#000"
                android:imeOptions="actionNext"
                android:singleLine="true"/>


            <EditText
                android:id="@+id/et_senha_novamente"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Digite sua senha novamente"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:textColor="#000"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_voltar_cadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Voltar"
                    android:textColor="#3e3e3e"
                    android:textSize="13sp"
                    />

                <Button
                    android:id="@+id/btn_cadastrar_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/borda_cinza"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Cadastrar"
                    />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar_cadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>