    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_msg_dialog_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para completar o pedido Ã© necessario finalizar seu cadastro."
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tv_msg_dialog_cadastro"
            />

        <LinearLayout
            android:layout_below="@+id/tv_msg_dialog_cadastro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Informe seu nome completo"
                android:textColor="#000"
                android:imeOptions="actionNext"
                android:textSize="13sp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Informe seu email"
                android:textSize="13sp"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Informe seu CPF"
                android:inputType="number"
                android:textSize="13sp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="#000"/>

