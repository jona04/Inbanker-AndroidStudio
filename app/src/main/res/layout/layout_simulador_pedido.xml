<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_simulador_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="br.com.appinbanker.inbanker.SimuladorPedido"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="">

            <ImageView
                android:id="@+id/img_amigo"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon"/>
            <TextView
                android:id="@+id/nome_amigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:text="Você ainda não realizou nenhuma negociação com "/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/et_valor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="Informe o valor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
                <EditText
                    android:id="@+id/et_calendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Previsao pagamento"
                    android:layout_weight="1"

                    >
                </EditText>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:id="@+id/btnCalendar"
                    android:text="Calendario"
                    android:layout_width="110dp"></Button>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_verificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            android:text="Verificar"/>

    </LinearLayout>
</LinearLayout>
