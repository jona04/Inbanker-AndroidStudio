<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagamento"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_data_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/11"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_marginLeft="4px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dias para pagamento"
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxa de Juros A. M."
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serviço"
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IOF"
                android:textSize="11sp" />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguro"
                android:textSize="11sp" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="13sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tv_dias_corridos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="1"
                android:textColor="@color/colorRed"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/tv_taxa_juros_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="1.99%"
                android:textColor="@color/colorRed"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_valor_taxa_servico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Serviço"
                android:textColor="@color/colorRed"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_taxa_iof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="R$ 0,00"
                android:textColor="@color/colorRed"
                android:textSize="11sp" />
            <!--<TextView
                android:id="@+id/tv_valor_seguro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Não"
                android:textColor="@color/colorRed"
                android:textSize="11sp" />-->
            <TextView
                android:id="@+id/tv_valor_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Total"
                android:textSize="13sp"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <!--<LinearLayout
        android:id="@+id/ll_confirma_recebimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_cancelar_pedido_antes_receb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000"
            android:text="Cancelar pedido"/>

        <Button
            android:id="@+id/btn_confirma_recebimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_cinza"
            android:textColor="#000"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:text="Confirmo recebimento"/>

    </LinearLayout> -->

    <LinearLayout
        android:id="@+id/ll_cancelar_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_cancelar_pedido_antes_resp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#000"
            android:text="Cancelar pedido"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginTop="15dp"/>

</LinearLayout>