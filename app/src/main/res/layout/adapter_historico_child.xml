<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_tipo_finalizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagamento"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_data_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/11"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_marginLeft="4px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dias corridos"
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxa de Juros A. M."
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor juros totais"
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multa"
                android:textSize="11sp" />
            <!-- <TextView
                android:id="@+id/tv_taxa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serviço"
                android:textSize="11sp" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="13sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="0">

            <TextView
                android:id="@+id/tv_dias_corridos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="1"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_taxa_juros_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="1.99%"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_valor_juros_totais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Juros"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_valor_multa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Multa"
                android:textSize="11sp" />
            <!--<TextView
                android:id="@+id/tv_valor_taxa_servico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Serviço"
                android:textSize="11sp" /> -->
            <TextView
                android:id="@+id/tv_valor_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Total"
                android:textSize="13sp"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/msg_ver_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text=""
        android:visibility="gone"/>
    <!--<LinearLayout
        android:id="@+id/ll_confirma_recebimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_confirma_recebimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_branca"
            android:padding="10dp"
            android:textColor="#000"
            android:text="Confirmo recebimento"/>

    </LinearLayout>-->


    <LinearLayout
        android:id="@+id/ll_confirma_quitacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirma_quitacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_cinza"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:padding="10dp"
            android:text="Fazer quitaçao"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginTop="15dp"/>
</LinearLayout>