<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_lista_amigos"
    android:clickable="true"
    android:layout_marginTop="6dip"
    android:layout_marginBottom="-6dip">


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ccc"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dip"
        android:padding="5dp"
        android:src="@drawable/icon" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_txt_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviado para: "
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_nome_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome usuario"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_data_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data do pedido: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_valor_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_status_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>
