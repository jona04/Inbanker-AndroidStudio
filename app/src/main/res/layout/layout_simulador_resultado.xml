<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_simulador_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_splash"
    tools:context="br.com.appinbanker.inbanker.SimuladorResultado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_amigo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon"/>
            <TextView
                android:id="@+id/nome_amigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/img_amigo"
                android:layout_marginTop="5dp"
                android:text="Nome usuario"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info_simulador_pedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_borda_reta"
                android:padding="10dp"
                android:textColor="#fff"
                android:textSize="13sp"
                android:text="Abaixo estão as informações referente ao pedido de empréstimo."/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/fundo_borda_reta"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor Pedido"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/tv_valor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="R$ 100,00"
                        android:textSize="11sp"
                        android:textColor="#fff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="-2dp"
                    android:background="@drawable/fundo_borda_reta"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Vencimento"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:singleLine="true"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/tv_vencimento"
                        android:text="11/11/2016"
                        android:textSize="11sp"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="-2dp"
                    android:background="@drawable/fundo_borda_reta"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor Total"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/tv_valor_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="R$ 120,00"
                        android:textSize="11sp"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_borda_reta"
                android:layout_marginTop="-2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="2">

                    <TableRow>
                        <TextView android:text="Dias para o pagamento:   " android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_dias_pagamento" android:textSize="11sp" android:textColor="#fff" />
                    </TableRow>
                    <TableRow>
                        <TextView android:text="Taxa de juros A.M.:" android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_juros_mes" android:textSize="11sp" android:textColor="#fff" />
                    </TableRow>
                   <TableRow>
                        <TextView android:text="Valor total do juros:" android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_valor_juros" android:textSize="11sp" android:textColor="#fff"/>
                    </TableRow>
                    <TableRow>
                        <TextView android:text="Taxa de serviço:" android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_taxa_servico" android:textSize="11sp" android:text="0,99%" android:textColor="#fff"/>
                    </TableRow>
                    <TableRow>
                        <TextView android:text="Valor do serviço:" android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_valor_servico" android:textSize="11sp" android:textColor="#fff" />
                    </TableRow>
                    <TableRow>
                        <TextView android:text="Valor de IOF:" android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_valor_iof" android:textSize="11sp" android:textColor="#fff" android:text="R$ 0,00" />
                    </TableRow>
                    <!--<TableRow>
                        <TextView android:text="Valor de seguro:" android:textSize="11sp" android:textColor="#fff"/>
                        <TextView android:id="@+id/tv_valor_seguro" android:textSize="11sp" android:textColor="#fff" android:text="R$ 0,00" />
                    </TableRow> -->


                </TableLayout>

                <Button
                    android:id="@+id/btn_fazer_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/borda_branca"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:layout_marginTop="25dp"
                    android:textSize="13sp"
                    android:text="Fazer pedido"/>

                <ProgressBar
                    android:id="@+id/progress_bar_simulador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
