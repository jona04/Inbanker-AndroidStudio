<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_simulador_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.appinbanker.inbanker.SimuladorResultado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_amigo"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon"/>
            <TextView
                android:id="@+id/nome_amigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/img_amigo"
                android:layout_marginTop="5dp"
                android:text="Nome usuario"
                android:textStyle="bold|italic"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:background="@drawable/fundo_borda"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info_simulador_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/img_amigo"
                android:text="Abaixo estão as informaçães referente ao pedido de empréstimo."/>


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:stretchColumns="1"
                android:layout_marginTop="50px">

                <TableRow>
                    <TextView android:text="Valor solicitado:"/>
                    <TextView android:id="@+id/tv_valor" />
                </TableRow>
                <TableRow>
                    <TextView android:text="Data de vencimento:"/>
                    <TextView android:id="@+id/tv_vencimento" />
                </TableRow>
                <TableRow>
                    <TextView android:text="Dias para o pagamento:"/>
                    <TextView android:id="@+id/tv_dias_pagamento" />
                </TableRow>
                <TableRow>
                    <TextView android:text="Taxa de juros A.M.:"/>
                    <TextView android:id="@+id/tv_juros_mes" />
                </TableRow>
               <TableRow>
                    <TextView android:text="Valor total do juros:"/>
                    <TextView android:id="@+id/tv_valor_juros" />
                </TableRow>


                <TableRow>
                    <TextView android:text="Valor total da dívida:"/>
                    <TextView android:id="@+id/tv_valor_total" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_fazer_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:text="Fazer pedido"/>

        <ProgressBar
            android:id="@+id/progress_bar_simulador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>


</ScrollView>
